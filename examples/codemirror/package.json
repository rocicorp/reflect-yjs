{
  "name": "reflect-yjs-codemirror",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "format": "prettier --write *",
    "check-types": "tsc --noEmit",
    "check-format": "prettier --check *",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "watch": "concurrently --kill-others 'npx reflect dev --silence-startup-message' 'VITE_REFLECT_URL=http://127.0.0.1:8080/ npm run dev'"
  },
  "devDependencies": {
    "@codemirror/lang-javascript": "^6.2.1",
    "@rocicorp/eslint-config": "^0.5.1",
    "@rocicorp/prettier-config": "^0.2.0",
    "@rocicorp/reflect": ">=0.38.202312080119 <=0.39.0",
    "@types/react-dom": "^18.2.17",
    "@types/react": "^18.2.38",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "nanoid": "^5.0.3",
    "react-codemirror2": "^7.3.0",
    "react-dom": "^18.2.0",
    "react": "^18.2.0",
    "reflect-yjs": "0.0.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "y-codemirror": "^3.0.1"
  },
  "eslintConfig": {
    "extends": "@rocicorp/eslint-config"
  },
  "prettier": "@rocicorp/prettier-config"
}
