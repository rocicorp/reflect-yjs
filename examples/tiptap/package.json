{
  "name": "reflect-yjs-tiptap",
  "description": "This example shows how to build a collaborative text editor with Reflect, Yjs, Tiptap, and Next.js.",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write *",
    "check-types": "tsc --noEmit",
    "check-format": "prettier --check *",
    "watch": "concurrently --kill-others 'npx reflect dev --silence-startup-message' 'npm run dev'"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rocicorp/reflect": "^0.38.202312080119",
    "@rocicorp/reflect-yjs": "0.0.1",
    "@tiptap/core": "^2.0.4",
    "@tiptap/extension-collaboration": "^2.0.4",
    "@tiptap/extension-collaboration-cursor": "^2.0.4",
    "@tiptap/extension-highlight": "^2.0.4",
    "@tiptap/extension-task-item": "^2.0.4",
    "@tiptap/extension-task-list": "^2.0.4",
    "@tiptap/react": "^2.0.4",
    "@tiptap/starter-kit": "^2.0.4",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "lexical": "^0.11.1",
    "nanoid": "^5.0.3",
    "next": "^13.5.4",
    "typescript": "^5.3.2",
    "yjs": "^13.6.10"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^2.1.13",
    "lowlight": "^3.1.0"
  }
}
